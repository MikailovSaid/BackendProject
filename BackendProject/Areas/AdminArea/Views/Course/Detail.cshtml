@model Course
@{
    ViewData["Title"] = "Detail";
}

<div class="container">
    <h3 class="mt-3">Course detail</h3>
    <div class="row mt-5" style="width: 400px">
        <img src="~/assets/img/course/@Model.Image" alt="Alternate Text" style="width:350px;height:350px" />
        <h5 class="mt-2">Name: @Model.Name</h5>
        <p><b>Description:</b> @Model.Desc</p>
        <p><b>About course:</b> @Model.AboutDesc</p>
        <p><b>Apply course:</b> @Model.ApplyDesc</p>
        <p><b>Certification:</b> @Model.CertificationDesc</p>
    </div>
    <a asp-action="Index" class="btn btn-primary mt-3">Go back</a>
</div>