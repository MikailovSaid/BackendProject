@model SliderVM
@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <form class="forms-sample" method="post" asp-action="Create" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Photos"></label>
            <input class="form-control" style="width:300px" asp-for="Photos">
            <span class="text-danger" asp-validation-for="Photos"></span>

            <label asp-for="Header"></label>
            <input type="text" class="form-control" style="width:300px" asp-for="Header" maxlength="500" placeholder="Slider header">

            <label asp-for="Description"></label>
            <input type="text" class="form-control" style="width:300px" asp-for="Description" maxlength="500" placeholder="Slider Decription">
        </div>
        <button type="submit" class="btn btn-primary me-2">Submit</button>
        <a asp-action="Index" class="btn btn-light">Cancel</a>
    </form>
</div>