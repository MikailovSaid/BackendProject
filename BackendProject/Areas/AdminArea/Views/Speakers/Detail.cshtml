@model Speakers
@{
    ViewData["Title"] = "Detail";
}

<div class="container">
    <h3 class="mt-3">Speaker detail</h3>
    <div class="row mt-5" style="width: 400px">
        <img src="~/assets/img/event/@Model.Image" alt="Alternate Text" style="width:150px;height:150px" />
        <h5 class="mt-2">Name: @Model.Name</h5>
        <p><b>Profession:</b> @Model.Profession</p>
    </div>
    <a asp-action="Index" class="btn btn-primary mt-3">Go back</a>
</div>