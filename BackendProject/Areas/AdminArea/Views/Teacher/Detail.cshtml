@model Teacher
@{
    ViewData["Title"] = "Detail";
}

<div class="container">
    <h3 class="mt-3">Course detail</h3>
    <div class="row mt-5" style="width: 400px">
        <img src="~/assets/img/teacher/@Model.Image" alt="Alternate Text" style="width:350px;height:359px" />
        <h5 class="mt-2">Name: @Model.Name</h5>
        <p><b>About:</b> @Model.About</p>
        <p><b>Degree:</b> @Model.Degree</p>
        <p><b>Experience:</b> @Model.Experience</p>
        <p><b>Hobbies:</b> @Model.Hobbies</p>
        <p><b>Faculty:</b> @Model.Faculty</p>
    </div>
    <a asp-action="Index" class="btn btn-primary mt-3">Go back</a>
</div>