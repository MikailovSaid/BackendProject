@model TestimotionalArea
@{
    ViewData["Title"] = "Detail";
}

<div class="container">
    <h3 class="mt-3">Slider detail</h3>
    <div class="row mt-5">
        <img src="~/assets/img/testimonial/@Model.Image" alt="Alternate Text" style="width:100px;height:100px" />
        <h5 class="mt-2">@Model.Name</h5>
        <p>@Model.Position</p>
        <p style="width: 800px">@Model.Desc</p>
    </div>
    <a asp-action="Index" class="btn btn-primary mt-3">Go back</a>
</div>