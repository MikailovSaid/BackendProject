@model RegisterVM
<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>sign up</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Register start -->
<div class="register-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>sign up</h2>
                            <span>Please register using account detail bellow.</span>
                        </div>
                        <div class="login-form">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <form method="post" asp-action="Register">
                                <input asp-for="FullName" placeholder="Fullname">
                                <span asp-validation-for="FullName" class="text-danger"></span>
                                <input asp-for="Username" placeholder="Username" class="mt-3">
                                <span asp-validation-for="Username" class="text-danger"></span>
                                <input asp-for="Email" placeholder="Email" class="mt-3">
                                <span asp-validation-for="Email" class="text-danger"></span>
                                <input asp-for="Password" placeholder="Password" class="mt-3">
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <input asp-for="ConfirmPassword" placeholder="Confirm password" class="mt-3">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                <div class="button-box">
                                    <div class="login-toggle-btn">
                                        <a asp-controller="Account" asp-action="Login">Do you have an account?</a>
                                    </div>
                                    <button type="submit" class="default-btn">sign up</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Register end --> 